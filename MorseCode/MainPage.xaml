<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MorseCode.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Morse Code!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Try typing in morse code!" FontSize="Title" Padding="30,10,30,10"/>

        <Label FontSize="16" Padding="30,24,30,0">
        </Label>
        <Label x:Name="dotNdashs" FontSize="16" Padding="30,0,30,0"/>
        <Label x:Name="theText" FontSize="16" Padding="30,0,30,0"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="." Clicked="Handle_dot" Margin="10" Padding="30,0,30,0" 
                    BorderColor="AliceBlue" BorderWidth="1"/>
            <Button Text="-" Clicked="Handle_dash" Margin="10" Padding="30,0,30,0" 
                    BorderColor="AliceBlue" BorderWidth="1"/>
            <Button Text="| |" Clicked="Handle_space" Margin="10" Padding="30,0,30,0" 
                    BorderColor="AliceBlue" BorderWidth="1"/>
            
        </StackLayout>
        <Button Text="Clear text" Clicked="Clear" 
                    BorderColor="AliceBlue" BorderWidth="1"/>
    </StackLayout>

</ContentPage>
